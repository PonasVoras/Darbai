{% extends "layout.html.twig" %}

{% block content %}
    <div class="container">
        <h3 class="text-center">Hyphenation API</h3>
            <form action="/words" method="POST">
                Input a new word:<br>
                <div class="row">
                    <input class="col-8" type="text" name="word" value="something">
                    <input class="col-4" type="submit" value="Submit">
                </div>
            </form>
        <br>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th class="text-center" scope="col">Word</th>
                </tr>
                </thead>
                <tbody>
                {% for word in Words.data %}
                    <tr>
                        <td>2</td>
                        <td class="text-center" >
                            {{ word.word }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
    </div>
{% endblock %}